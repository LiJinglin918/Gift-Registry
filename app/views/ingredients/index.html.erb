<%= render 'shared/page_title', title: "Available gifts" %>

<div align="center">
  <%= will_paginate%>
  <% @ingredients.each do |ing| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="chef-title"><%= link_to ing.name.capitalize,ingredient_path(ing) %></li>
          <li><small><%= pluralize(ing.recipes.count, "gift") if ing.recipes %></small></li>
          <%if logged_in? && current_chef.admin? %>
          <li class="btn btn-lg btn-primary"><%=link_to "Edit this gift", edit_ingredient_path(ing) %></li>
          <%end%>
        </div>
      </div>
    </ul>
  <%end%>
  <%= will_paginate%>

</div>